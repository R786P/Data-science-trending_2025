# SMS Spam Detection (Kaggle-style)
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.naive_bayes import MultinomialNB
from sklearn.metrics import accuracy_score

# Use real data: https://www.kaggle.com/datasets/uciml/sms-spam-collection-dataset
# For demo, mock data:
texts = ["Win cash now!", "Hi, are we meeting?", "Free prize! Click now", "Your order is confirmed"]
labels = [1, 0, 1, 0]  # 1 = spam

vec = TfidfVectorizer()
X = vec.fit_transform(texts)
X_train, X_test, y_train, y_test = train_test_split(X, labels, test_size=0.5)

model = MultinomialNB()
model.fit(X_train, y_train)
acc = accuracy_score(y_test, model.predict(X_test))
print(f"✅ Accuracy: {acc*100:.0f}%")
print("टेस्ट: 'Free money!' →", "Spam" if model.predict(vec.transform(['Free money!']))[0] else "Not Spam")
