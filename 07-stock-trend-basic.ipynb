import yfinance as yf
import pandas as pd

ticker = "RELIANCE.NS"  # or "AAPL"
data = yf.download(ticker, period="3mo")['Close']

# Moving Average Strategy
data['MA20'] = data.rolling(20).mean()
data['Signal'] = (data['Close'] > data['MA20']).astype(int)

print("ğŸ“Š Last 5 days trend:")
print(data[['Close', 'MA20', 'Signal']].tail())
print("\nğŸ‘‰ Today's Signal: BUY" if data['Signal'].iloc[-1] else "SELL")
