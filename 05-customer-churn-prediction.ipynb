# Telecom Churn (Mock Data)
import pandas as pd
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import accuracy_score

# Real data: https://www.kaggle.com/datasets/blastchar/telco-customer-churn
df = pd.DataFrame({
    'MonthlyCharges': [29.9, 56.9, 99.9, 39.9],
    'Tenure': [1, 34, 2, 45],
    'Churn': [0, 0, 1, 0]  # 1 = churned
})

X, y = df[['MonthlyCharges', 'Tenure']], df['Churn']
model = RandomForestClassifier()
model.fit(X, y)

# Predict new customer
new = [[70.0, 5]]  # ₹70/month, 5 months old
pred = model.predict(new)[0]
print("⚠️ Churn Risk:", "High" if pred == 1 else "Low")
