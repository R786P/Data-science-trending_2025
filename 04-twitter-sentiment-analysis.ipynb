# Simple Sentiment with TextBlob (no internet needed)
from textblob import TextBlob

reviews = [
    "I love this product!",
    "Worst experience ever.",
    "Okay, not bad.",
    "Amazing quality and fast delivery!"
]

for r in reviews:
    sentiment = TextBlob(r).sentiment.polarity
    label = "Positive" if sentiment > 0 else "Negative" if sentiment < 0 else "Neutral"
    print(f"'{r}' â†’ {label} (Score: {sentiment:.2f})")
