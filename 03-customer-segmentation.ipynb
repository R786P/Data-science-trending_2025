# Mall Customer Segmentation
from sklearn.cluster import KMeans
import pandas as pd
import numpy as np

# Mock data (real: https://www.kaggle.com/datasets/vjchoudhary7/customer-segmentation-tutorial-in-python)
df = pd.DataFrame({
    'Annual Income (k$)': [15, 20, 35, 40, 50, 80, 90, 25, 30, 70],
    'Spending Score (1-100)': [39, 81, 80, 20, 15, 80, 70, 75, 60, 25]
})

kmeans = KMeans(n_clusters=3, random_state=42)
df['Cluster'] = kmeans.fit_predict(df)

print("✅ ग्राहक ग्रुप्स:")
print(df.groupby('Cluster').mean())
